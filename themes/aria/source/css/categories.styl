@import "variables";
.categories-container {
  padding: 1em;
  margin: 0.5em;
  .categories-counter {
    text-align: center;
    position: relative;
    padding-left: 1em;
    font-size: 1.5em;
  }
  .category-list-link {
    font-size: 1.2em;
    &:active {
      top: 0.1em;
    }
  }
  .category-list-count {
    font-size: 1.2em;
    margin-left: 1em;
  }
}
