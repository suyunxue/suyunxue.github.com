@import "variables";
.archive-container {
  padding-top: 1em;
  padding-right: 1em;
  padding-bottom: 1em;
  padding-left: 2em;
  .archive-counter {
    position: relative;
    padding-left: 1em;
    font-size: 2em;
    &::after {
      content: " ";
      position: absolute;
      left: 0;
      top: 50%;
      margin-left: -0.25em;
      margin-top: -0.25em;
      width: 0.5em;
      height: 0.5em;
      background: $grey;
      border-radius: 50%;
    }
  }
  .archive-year {
    position: relative;
    padding-left: 1em;
    font-size: 1.8em;
    &::after {
      content: " ";
      position: absolute;
      left: 0;
      top: 50%;
      margin-left: -0.25em;
      margin-top: -0.25em;
      width: 0.5em;
      height: 0.5em;
      background: $grey;
      border-radius: 50%;
    }
  }
  .archive-post {
    position: relative;
    padding-left: 1em;
    padding-right: 0.5em;
    font-size: 1.5em;
    .post-title {
      padding: 0.25em 0;
    }
    &::after {
      content: " ";
      position: absolute;
      left: 0;
      top: 50%;
      margin-left: -0.25em;
      margin-top: -0.25em;
      width: 0.5em;
      height: 0.5em;
      background: $grey;
      border-radius: 50%;
    }
    .post-date {
      font-size: 0.8em;
      color: $color-link;
    }
    .post-title-link {
      display: inline-block;
      position: relative;
      text-decoration: none;
      color: $color-link;
      border-bottom: 0.05em dashed $grey;
      transition: 0.3s ease-in-out;
      &:hover {
        color: $color-link-hover;
        border-bottom: 0.03em solid $color-link-hover;
      }
      &:active {
        top: 0.1em;
      }
    }
  }
}
