@import "variables";
@import "nib";
.post-container {
  padding: 1em;
  margin: 0.5em;
  .post-title {
    text-align: center;
    display: block;
    position: relative;
    text-decoration: none;
    color: $color-font;
  }
  .post-meta {
    text-align: center;
    display: block;
    position: relative;
  }
  .post-tags {
    .post-tag {
      margin: 0.5em;
      display: inline-block;
      text-decoration: none;
      color: $color-link-index-button;
      padding: 0.15em;
      line-height: 1.2em;
    }
  }
}
.post-nav {
  margin: 0.5em;
  padding: 0.5em;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: stretch;
  flex-wrap: nowrap;
  .post-nav-divider {
    width: 30%;
    flex-grow: 0;
    display: block;
    text-align: center;
  }
  .post-nav-item {
    flex-grow: 1;
    font-size: 1.2em;
    a {
      position: relative;
      display: inline-block;
      line-height: 1.25em;
      text-decoration: none;
      border-bottom: none;
      &:hover {
        border-bottom: none;
      }
      &:active {
        top: 0.1em;
      }
    }
  }
  .post-nav-next {
    max-width: 50%;
    text-align: left;
  }
  .post-nav-prev {
    max-width: 50%;
    text-align: right;
  }
}
