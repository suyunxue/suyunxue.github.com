@import "variables";
@import "nib";
.main {
  margin-top: - $search-height;
  .main-container {
    width: auto;
    background: $color-main-background;
    box-sizing: border-box;
    box-shadow: 0 0.075em 1em 0.5em rgba(0, 0, 0, 0.19);
    border-radius: bottom $corner-radius;
    display: flex;
    if (hexo-config("sidebar") == "left") {
      flex-direction: row-reverse;
    } else {
      flex-direction: row;
    }
    justify-content: space-between;
    align-items: stretch;
    flex-wrap: nowrap;
    padding: 0;
    .content {
      flex-grow: 1;
      // Keep this or it will expand!
      width: 75%;
      flex-basis: 75%;
      flex-shrink: 0;
      .index-post {
        padding: 1em;
        margin: 0.5em;
        .post-button {
          margin: 0.5em;
          .readmore {
            display: inline-block;
            padding: 0.25em 1em;
            font-size: 1em;
            color: $color-button-font;
            background: $color-button-background;
            line-height: 1.5em;
          }
        }
        .post-tags {
          .post-tag {
            margin: 0.5em;
            display: inline-block;
            text-decoration: none;
            color: $color-link-index-button;
            padding: 0.15em;
            line-height: 1.2em;
          }
        }
        .post-header {
          padding: 0.25em 0.25em;
          .post-title-link {
            display: inline-block;
            position: relative;
            text-decoration: none;
            border-bottom: none;
            color: $color-font;
            &::after {
              content: " ";
              position: absolute;
              width: 100%;
              height: 0.1em;
              bottom: 0;
              left: 0;
              background: $color-font;
              visibility: hidden;
              transform: scaleX(0);
              transition: 0.3s ease-in-out;
            }
            &:hover {
              border-bottom: none;
              &::after {
                visibility: visible;
                transform: scaleX(1);
              }
            }
          }
        }
      }
    }
  }
  @media (max-width: 48em) {
    .main-container {
      flex-direction: column;
      .content {
        width: 100%;
      }
    }
  }
}
