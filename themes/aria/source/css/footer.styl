@import "variables";
@import "nib";
.footer {
  ::selection {
    color: $color-footer-background;
    background: $color-footer-font;
  }
  flex-shrink: 0;
  flex-grow: 0;
  background: $color-footer-background;
  color: $color-footer-font;
  .footer-container {
    width: auto;
    word-wrap: break-word;
    // word-break: break-all;
    line-height: 2em;
    padding-right: 1em;
    padding-bottom: 1em;
    padding-left: 1em;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: stretch;
    flex-wrap: nowrap;
    .footer-left {
      flex-grow: 1;
      flex-basis: 50%;
      flex-shrink: 0;
      text-align: left;
    }
    .footer-right {
      flex-grow: 1;
      flex-basis: 50%;
      flex-shrink: 0;
      text-align: right;
    }
  }
  margin-top: 1.5em;
  a {
    color: $color-footer-link;
    text-decoration: none;
    border-bottom: 0.05em dotted $color-footer-link;
    transition: 0.3s ease-in-out;
    &:hover {
      color: $color-footer-link-hover;
      border-bottom: 0.05em solid $color-footer-link-hover;
    }
    &:active {
      top: 0.1em;
    }
  }
  .back-to-top {
    display: block;
    text-align: center;
    a {
      border-bottom: none;
      background: $color-background;
      color: $color-link;
      overflow: hidden;
      display: inline-block;
      margin: 0 auto;
      padding: 0 1em;
      cursor: pointer;
      border-radius: bottom $corner-radius;
      font-size: 2em;
      &:hover {
        color: $color-link-hover;
        border-bottom: none;
      }
      &:active{
        border-bottom: none;
      }
    }
  }
  @media (max-width: 40em) {
    .footer-container {
      flex-direction: column-reverse;
      .footer-left {
        text-align: center;
      }
      .footer-right {
        text-align: center;
      }
    }
  }
}
